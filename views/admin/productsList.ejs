<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>RummySpace.in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/favion.svg">
    <!-- Template CSS -->
    <link href="/assets/css/main.css" rel="stylesheet" type="text/css" />
    <!-- Sweet Alert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">


    <!-- Prevent caching -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="index.html" class="brand-wrap">
                <img src="/logo1.jpg" alt="RummySpace.in">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> <i class="text-muted material-icons md-menu_open"></i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/adminHome"> <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item active">
                    <a class="menu-link" href="/admin/productsList"> <i class="icon material-icons md-shopping_bag"></i>
                        <span class="text">Products</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/addProducts"> <i class="icon material-icons md-add_box"></i>
                        <span class="text">Add product</span>
                    </a>
                </li>
                 
                <li class="menu-item">
                    <a class="menu-link" href="/admin/addMessage"> <i class="icon material-icons md-comment"></i>
                        <span class="text">Message</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/feedbackPage"> <i class="icon material-icons md-stars"></i>
                        <span class="text">Feedbacks</span> </a>
                </li>
              
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/subscribersPage"> <i class="icon material-icons md-people"></i>
                        <span class="text">Subscribers</span> </a>
                </li>
               
            </ul>
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <h3> Rummy Space- Products List</h3>
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                        class="material-icons md-apps"></i> </button>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i
                                class="material-icons md-cast"></i></a>
                    </li>
                    <li>
                        <a class="dropdown-item text-danger" href="/admin/logout"><i
                                class="material-icons md-exit_to_app"></i>Logout</a>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                </div>

            </div>
            <div class="card mb-4">
                <style>
                    .rank-container {
                        display: flex;
                        align-items: center;
                    }

                    .rank-container p {
                        margin-right: 10px;
                    }

                    .rank {
                        background-color: #08817833;
                        padding: 10px;
                        border-radius: 5px;
                        margin-bottom: 10px;
                    }

                    .rank h2 {
                        margin: 0;
                        font-size: 24px;
                        color: #333;
                    }
                </style>

                <div class="card-body">
                    <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                        <% if(productsData && productsData.length> 0) { %>
                            <% productsData.forEach(product=> { %>

                                <div class="col">

                                    <div class="card card-product-grid">
                                        <div class="img-wrap">

                                            <div class="rank">
                                                Rank:<h2>
                                                    <%= product.priorityNumber %>
                                                </h2>
                                            </div>

                                        </div>

                                        <a href="#" class="img-wrap">
                                            <img src="/productImages/<%= product.imageUrl %>" alt="Product">
                                        </a>

                                        <div class="info-wrap">
                                            <a href="#" class="title price">Product Name: <%= product.productName %></a>
                                            <div class="text-truncate">Text 1: <%= product.text1 %>
                                            </div>
                                            <div class="text-truncate">Text 2: <%= product.text2 %>
                                            </div>
                                            <div class="text-truncate">Expiry Date: <%= product.expiryDate %>
                                            </div>
                                            <div class="text-truncate mb-2">Description 1: <%= product.description1 %>   </div>
                                            <div class="text-truncate mb-2">Description 2: <%= product.description2 %>  </div>
                                            <div class="text-truncate mb-2">Description 3: <%= product.description3 %>  </div>
                                            <div class="text-truncate mb-2">Downloads: <%= product.mostDownloads %>
                                            </div>
                                            <div class="text-truncate mb-2">isActive:
                                                <% if (product.isActive===true) { %>
                                                    <span class="badge rounded-pill alert-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge rounded-pill alert-danger">Inactive</span>
                                                        <% } %>
                                            </div>
                                            <div class="text-truncate mb-2">isPopular:
                                                <% if (product.isPopular===true) { %>
                                                    <span class="badge rounded-pill alert-success">Popular</span>
                                                    <% } else { %>
                                                        <span class="badge rounded-pill alert-danger">Not popular</span>
                                                        <% } %>
                                            </div>
                                            <div class="text-truncate mb-2">Broadcast:
                                                <% if (product.Broadcast===true) { %>
                                                    <span class="badge rounded-pill alert-success">Broadcasted</span>
                                                    <% } else { %>
                                                        <span class="badge rounded-pill alert-danger">Not Broadcasted</span>
                                                        <% } %>
                                            </div>

                                            <a href="/admin/editProducts?_id=<%= product._id %>"
                                                class="btn btn-sm font-sm rounded btn-brand">
                                                <i class="material-icons md-edit"></i> Edit
                                            </a>


                                            <a href="#" class="btn btn-sm font-sm btn-light rounded delete-product"
                                                data-product-id="<%= product._id %>"
                                                data-product-name="<%= product.productName %>">
                                                <i class="material-icons md-delete_forever"></i> Delete
                                            </a>


                                        </div>

                                    </div>
                                </div>

                                <% }); %>
                                    <% } else { %>
                                        <p>No products found.</p>
                                        <% } %>

                    </div>
                </div>
            </div>

        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear())
                    </script> ©, RummySpace.in
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/select2.min.js"></script>
    <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js" type="text/javascript"></script>
</body>

<!-- Add SweetAlert JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

<script>



    // JavaScript code to handle delete button click
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".delete-product");

        deleteButtons.forEach(button => {
            button.addEventListener("click", function (event) {
                event.preventDefault(); // Prevent default action of anchor tag

                const productId = this.dataset.productId; // Get product ID from data attribute
                const productName = this.dataset.productName; // Get product name from data attribute

                // Show SweetAlert confirmation dialog
                swal({
                    title: "Are you sure?",
                    text: `Do you want to delete "${productName}"?`,
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            // If user confirms deletion, redirect to delete product URL
                            window.location.href = `/admin/deleteProduct?_id=${productId}`;
                        } else {

                        }
                    });
            });
        });
    });
</script>

</html>
