    <!-- Prevent caching -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="index.html" class="brand-wrap">
                <img src="/logo1.jpg" alt="RummySpace.in">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize">
                    <i class="text-muted material-icons md-menu_open"></i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link" href="/admin/adminHome">
                        <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/productsList">
                        <i class="icon material-icons md-shopping_bag"></i>
                        <span class="text">Products</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/addProducts">
                        <i class="icon material-icons md-add_box"></i>
                        <span class="text">Add product</span>
                    </a>
                </li>
                <li class="menu-item active">
                    <a class="menu-link" href="/admin/addMessage">
                        <i class="icon material-icons md-comment"></i>
                        <span class="text">Message</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/feedbackPage"> <i class="icon material-icons md-stars"></i>
                        <span class="text">Feedbacks</span> </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/subscribersPage"> <i class="icon material-icons md-people"></i>
                        <span class="text">Subscribers</span> </a>
                </li>
               
 
            </ul>
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <h3>Rummy Space- Add Running Messages</h3>
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside">
                    <i class="material-icons md-apps"></i>
                </button>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#">
                            <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon">
                            <i class="material-icons md-cast"></i>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item text-danger" href="/admin/logout">
                            <i class="material-icons md-exit_to_app"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main d-flex">
            <div class="col-lg-6">
                <!-- Form Section -->
                <form method="post" onsubmit="return validateForm()" action="/admin/addMessage">
                    <div class="row">
                        <div class="col-9">
                            <div class="content-header">
                                <h2 class="content-title">Add Running Message</h2>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="mb-4">
                                        <label for="text1" class="form-label">Running Message </label>
                                        <input type="text" placeholder="Type here" class="form-control" id="text1"
                                            name="message">
                                        <p id="text1Modify" style="color: red;"> </p>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div> <!-- card end// -->
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 ">


                <% if(messageData) { %>
                    <% messageData.forEach(function(message, index) { %>
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="mb-1">
                                    <p><%= index + 1 %>. <%= message.text1 %></p>
                                    <a href="#" class="btn btn-sm font-sm btn-light rounded delete-product"
                                       data-product-id="<%= message._id   %>" >
                                        <i class="material-icons md-delete_forever"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </section>
 

        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear())
                    </script> Â©, RummySpace.in
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/select2.min.js"></script>
    <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Cropper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <!-- SweetAlert -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js" type="text/javascript"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".delete-product");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function (event) {
                    event.preventDefault(); // Prevent default action of anchor tag

                    const productId = this.dataset.productId; // Get product ID from data attribute

                    // Show SweetAlert confirmation dialog
                    swal({
                        title: "Are you sure?",
                        text: "Do you want to delete this message?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true,
                    })
                        .then((willDelete) => {
                            if (willDelete) {
                                // If user confirms deletion, redirect to delete product URL
                                window.location.href = `/admin/deleteMessage?_id=${productId}`;
                            }
                        });
                });
            });
        });
    </script>
    <script>
        function validateForm() {
            var text1Modify = document.getElementById('text1').value.trim();
            var isValid = true;

            // Reset error messages
            document.getElementById('text1Modify').innerText = '';

            if (text1Modify === '') {
                document.getElementById('text1Modify').innerText = 'Text 1 cannot be empty';
                isValid = false;
            }

            return isValid;
        }
    </script>
</body>

</html>